{
  "private": true,
  "name": "my-nextron-app",
  "description": "My application description",
  "version": "1.0.0",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron --run-only",
    "build": "nextron build",
    "postinstall": "electron-builder install-app-deps",
    "prepare": "is-ci || husky install",
    "prettier": "prettier -c --write \"src/**/*\"",
    "lint": "next lint && npm run lint:js && npm run lint:style && npm run lint:prettier",
    "commit": "git cz",
    "download": "just install",
    "commitlint": "commitlint --config commitlint.config.js -e -V",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:prettier": "prettier --check \"src/**/*\" --end-of-line auto",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "analyze": "cross-env ANALYZE=true next build src",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build src",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build src"
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "dependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "download": "^8.0.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.0.1",
    "extract-file-icon": "^0.3.2",
    "just-scripts": "^1.6.1",
    "sass": "^1.48.0",
    "sqlite3": "^5.0.2",
    "windicss-webpack-plugin": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.0",
    "autoprefixer": "^10.3.5",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "eslint": "^8.6.0",
    "eslint-config-next": "^12.0.8",
    "git-cz": "^4.8.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "lodash": "^4.17.21",
    "next": "^12.0.0",
    "nextron": "^7.1.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.3"
  }
}
